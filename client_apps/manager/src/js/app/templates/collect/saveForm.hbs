<form action='#' id="resultsForm">
  <input type="hidden" name="saveToNewName" id="saveTo-new" value="">


<div class="form-group"  id="saveTo-formgroup">
<label>Item Collection</label>
  <select name="saveTo"   class="form-control" id="saveTo-selector">
    <option value=""></option>
    {{#each items}}
      <option value="{{_id}}">{{title}}</option>
    {{/each}}
  </select>
  </div>

<div class="form-group">
  <input type="submit" class="btn btn-default" value="Save items" data-loading-text="Saving..." class="btn btn-primary" id="save-items-btn" />
</div>

<a href="#" id="empty-current-collection">empty the current list</a>

</form>